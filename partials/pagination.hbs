<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-backward" aria-hidden="true"></i> Newer </a>
    {{/if}}
    <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Older <i class="fa fa-forward" aria-hidden="true"></i></a>
    {{/if}}
</nav>
